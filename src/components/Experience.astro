---
import ExperienceItem from "./ExperienceItem.astro";
const EXPERIENCE = [
  {
    date: "Abril - Junio 2025",
    title: "Administrador de paginas web - WordPress",
    description:
      "Creación y administración de paginas web en WordPress, optimización SEO, gestión de contenido y mantenimiento técnico para asegurar un rendimiento óptimo.",
  },
  {
    date: "Julio - Diciembre 2023",
    title: "Coordinador de Laboratorios - Universidad Simón Bolívar",
    description:
      "Supervisión y coordinación de los laboratorios de la universidad, asegurando el correcto funcionamiento de los equipos, mantenimiento preventivo a los equipos de computo, gestión de inventario, actualización de Software y la implementación de un software estadístico de las licencias.",
  },
];
---

<ol class="relative border-s border-gray-200 ml-3">
  {
    EXPERIENCE.map((experience) => (
      <li class="mb-10 ms-4">
        <ExperienceItem {...experience} />
      </li>
    ))
  }
</ol>
