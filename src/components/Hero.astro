---
const personalImageAlt = "Darwin Niño Escorcia";
import Badge from "../components/Badge.astro";
import LinkedInIcon from "../icons/Linkedin.astro";
import GithubIcon from "../icons/GitHub.astro";
import MailIcon from "../icons/Mail.astro";
import SocialPill from "../components/SocialPill.astro";
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="/darwin.png"
      alt={personalImageAlt}
    />
    <a
      href="https://www.linkedin.com/in/darwin-ni%C3%B1o/"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Disponible para trabajar</Badge>
    </a>
  </div>
  <h1 class="text-4xl font-bold tracking-tight sm:text-5xl dark:text-white">
    Hey, Soy Darwinini!
  </h1>
  <p
    class="mt-6 text-xl [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
  >
    <strong>Ingeniero de Sistemas</strong> Apasionado por la tecnología y el aprendizaje
    continuo.
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:darwninoe@gmail.com">
      <MailIcon class="size-4" />
      Email
    </SocialPill>
    <SocialPill href="https://linkedin.com/in/darwin-ni%C3%B1o/">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
    <SocialPill href="https://github.com/Darwininii">
      <GithubIcon class="size-4" />
      GitHub
    </SocialPill>
  </nav>
</div>
